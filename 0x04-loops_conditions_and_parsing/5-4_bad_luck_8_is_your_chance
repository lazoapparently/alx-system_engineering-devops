#!/usr/bin/env bash
# Function displays bad luck for the 4th loop iteration
# and displays good luck for the 8th loop iteration
# then displays Best School for the other iterations
var=1
while [ $var -ne 11 ]
do
	if [ $var -eq 4 ]
	then
		echo "bad luck"
	elif [ $var -eq 8 ]
	then
		echo "good luck"
	else
		echo "Best School"
	fi
	var=$(( var + 1 ))
done
